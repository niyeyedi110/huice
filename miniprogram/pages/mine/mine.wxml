<!--pages/mine/mine.wxml-->
<view class="container">
  <!-- 用户信息 -->
  <view class="user-section card">
    <view class="user-info" bindtap="getUserProfile">
      <image class="avatar" src="{{hasUserInfo ? userInfo.avatarUrl : '/images/default-avatar.png'}}"></image>
      <view class="user-detail">
        <text class="nickname">{{hasUserInfo ? userInfo.nickName : '点击登录'}}</text>
        <text class="join-info">已加入 {{joinDays}} 天</text>
      </view>
      <image src="/images/arrow-right.png" class="arrow-icon"></image>
    </view>
    
    <!-- 数据统计 -->
    <view class="data-stats">
      <view class="stat-item">
        <text class="stat-value">{{totalRecords}}</text>
        <text class="stat-label">饮食记录</text>
      </view>
      <view class="stat-divider"></view>
      <view class="stat-item">
        <text class="stat-value">{{totalPhotos}}</text>
        <text class="stat-label">照片总数</text>
      </view>
    </view>
  </view>

  <!-- 目标设置 -->
  <view class="settings-section card">
    <view class="section-title">目标设置</view>
    
    <view class="setting-item" bindtap="showSetting" data-type="dailyGoal">
      <view class="setting-left">
        <image src="/images/target.png" class="setting-icon"></image>
        <text class="setting-label">每日记录目标</text>
      </view>
      <view class="setting-right">
        <text class="setting-value">{{settings.dailyGoal}}餐</text>
        <image src="/images/arrow-right.png" class="arrow-icon"></image>
      </view>
    </view>

    <view class="setting-item">
      <view class="setting-left">
        <image src="/images/reminder.png" class="setting-icon"></image>
        <text class="setting-label">用餐提醒</text>
      </view>
      <switch class="setting-switch" checked="{{settings.reminderEnabled}}" 
              bindchange="toggleReminder"></switch>
    </view>

    <view wx:if="{{settings.reminderEnabled}}" class="reminder-times">
      <view wx:for="{{settings.reminderTimes}}" wx:key="*this" class="time-tag">
        {{item}}
      </view>
    </view>
  </view>

  <!-- 数据管理 -->
  <view class="data-section card">
    <view class="section-title">数据管理</view>
    
    <view class="setting-item" bindtap="exportData">
      <view class="setting-left">
        <image src="/images/export.png" class="setting-icon"></image>
        <text class="setting-label">导出数据</text>
      </view>
      <image src="/images/arrow-right.png" class="arrow-icon"></image>
    </view>

    <view class="setting-item" bindtap="clearCache">
      <view class="setting-left">
        <image src="/images/clear.png" class="setting-icon"></image>
        <text class="setting-label">清理缓存</text>
      </view>
      <image src="/images/arrow-right.png" class="arrow-icon"></image>
    </view>
  </view>

  <!-- 其他 -->
  <view class="other-section card">
    <view class="section-title">其他</view>
    
    <view class="setting-item" bindtap="showAbout">
      <view class="setting-left">
        <image src="/images/about.png" class="setting-icon"></image>
        <text class="setting-label">关于我们</text>
      </view>
      <image src="/images/arrow-right.png" class="arrow-icon"></image>
    </view>

    <view class="setting-item" bindtap="feedback">
      <view class="setting-left">
        <image src="/images/feedback.png" class="setting-icon"></image>
        <text class="setting-label">意见反馈</text>
      </view>
      <image src="/images/arrow-right.png" class="arrow-icon"></image>
    </view>
  </view>

  <!-- 设置弹窗 -->
  <view wx:if="{{showSettingModal}}" class="modal-mask" bindtap="closeSetting">
    <view class="modal-container" catchtap="">
      <view class="modal-title">每日记录目标</view>
      
      <view class="goal-options">
        <view wx:for="{{[1,2,3,4,5]}}" wx:key="*this" 
              class="goal-option {{settings.dailyGoal === item ? 'active' : ''}}"
              bindtap="updateDailyGoal" data-value="{{item}}">
          {{item}}餐
        </view>
      </view>
      
      <view class="modal-footer">
        <button class="modal-btn" bindtap="closeSetting">确定</button>
      </view>
    </view>
  </view>
</view>