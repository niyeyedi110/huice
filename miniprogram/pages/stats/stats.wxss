/* pages/stats/stats.wxss */
.container {
  padding-bottom: 100rpx;
}

/* 时间范围选择 */
.time-range-selector {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.range-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  margin: 0 10rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  color: #666;
  transition: all 0.3s;
}

.range-btn.active {
  background-color: #ff6b6b;
  color: #fff;
}

/* 统计卡片 */
.stats-card {
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

/* 基础统计网格 */
.stats-grid {
  display: flex;
  flex-wrap: wrap;
  margin: -10rpx;
}

.stat-item {
  width: 50%;
  padding: 30rpx 10rpx;
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 48rpx;
  font-weight: 500;
  color: #ff6b6b;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #999;
}

/* 餐次分布 */
.meal-distribution {
  padding: 20rpx 0;
}

.meal-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
}

.meal-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.meal-name {
  font-size: 28rpx;
  color: #666;
  width: 80rpx;
}

.meal-count {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
}

.meal-bar {
  position: absolute;
  bottom: -10rpx;
  left: 80rpx;
  height: 8rpx;
  background-color: #ff6b6b;
  border-radius: 4rpx;
  transition: width 0.5s;
}

/* 热量分布 */
.calorie-distribution {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
}

.calorie-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.calorie-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.calorie-percent {
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}

.calorie-label {
  font-size: 26rpx;
  color: #666;
}

/* 标签云 */
.tags-cloud {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
}

.tag-item {
  padding: 10rpx 20rpx;
  margin: 10rpx;
  background-color: #f0f0f0;
  border-radius: 20rpx;
  color: #666;
  transition: all 0.3s;
}

.tag-item:active {
  background-color: #ff6b6b;
  color: #fff;
}

.empty-tags {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 生成报告 */
.report-section {
  padding: 40rpx 30rpx;
}

.report-btn {
  width: 100%;
  height: 90rpx;
  background-color: #ff6b6b;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.report-btn:active {
  background-color: #ff5252;
}