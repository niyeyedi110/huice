/* pages/history/history.wxss */
.container {
  padding-top: 100rpx;
}

/* 头部切换 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.view-switcher {
  display: flex;
  padding: 20rpx;
}

.switch-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  margin: 0 10rpx;
  border-radius: 50rpx;
  transition: all 0.3s;
}

.switch-btn.active {
  background-color: #ff6b6b;
  color: #fff;
}

.switch-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

/* 日历视图 */
.calendar-view {
  padding: 20rpx;
}

.month-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.calendar-grid {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.weekdays {
  display: flex;
  margin-bottom: 20rpx;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.days {
  display: flex;
  flex-wrap: wrap;
}

.day {
  width: calc(100% / 7);
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  font-size: 30rpx;
  color: #333;
}

.day.has-record {
  color: #ff6b6b;
  font-weight: 500;
}

.dot {
  position: absolute;
  bottom: 10rpx;
  width: 8rpx;
  height: 8rpx;
  background-color: #ff6b6b;
  border-radius: 50%;
}

/* 选中日期的记录 */
.selected-date-records {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.date-header {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
  color: #333;
}

.record-time {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.record-photos {
  display: flex;
  flex-wrap: wrap;
  margin: -5rpx;
}

.record-photo {
  width: calc(33.33% - 10rpx);
  height: 180rpx;
  margin: 5rpx;
  border-radius: 8rpx;
}

/* 照片墙视图 */
.gallery-view {
  padding: 10rpx;
}

.gallery-grid {
  display: flex;
  flex-wrap: wrap;
  margin: -5rpx;
}

.gallery-item {
  width: calc(33.33% - 10rpx);
  height: 240rpx;
  margin: 5rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.gallery-item image {
  width: 100%;
  height: 100%;
}

.photo-date {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0,0,0,0.6), transparent);
  color: #fff;
  font-size: 22rpx;
  padding: 20rpx 10rpx 10rpx;
  text-align: center;
}

.no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}